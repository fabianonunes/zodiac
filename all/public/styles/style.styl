@import 'nib'
@import 'normalize'
@import 'webfonts'
@import 'utils'

nav-width = 320px

html
	overflow auto

body
	font normal 10pt sans-serif, Arial, Helvetica

.main, .options
	background #eee url('../images/bg/12.png')

.main
	absolute(top 0, left 0, bottom 0, right nav-width)

.path
	absolute(right 0, top 0, bottom 0)
	width nav-width
	z-index 1
	width nav-width
	background #eee
	background #eee url('../images/bg/4.png')
	box-shadow 0 0 10px rgba(#000, 0.3)

	div
		position relative
		&:first-of-type .row .icon
			display none

	.row
		color #333
		padding 10px
		position relative
		font normal 14px/19px 'Quattrocento Sans', sans-serif
		border-top 1px solid #fff
		border-bottom 1px solid #ddd
		background linear-gradient(top, #f9f9f9 20%, #f0f0f0 100%)
		box-shadow 0 2px 3px rgba(#333, 0.10),  0 -1px 3px #fff inset

		.icon
			float right
			opacity .5
			width 16px
			height 16px
			margin 2px

		.grep
			background-position 0 0
		.union
			background-position 0 -184px
		.intersection
			background-position 0 -92px
		.difference
			background-position 0 -46px
		.symmetric
			background-position 0 -138px

	.options
		text-align center
		height 0
		overflow hidden
		box-shadow -1px -2px 3px rgba(#333, 0.1) inset

		.icon
			text-indent -9999px
			direction ltr
			display inline-block
			opacity 0.3
			transition opacity 0.15s ease-in
			margin 6px 10px
			height 30px
			width 32px
			&:hover
				opacity 1

		.true
			opacity 1

	.counter
		float right
		border-radius 10px
		font bold 12px/19px arial
		color #fff
		box-shadow 0 1px 0 rgba(#000, 0.3) inset
		text-shadow #999 1px 1px 1px
		background linear-gradient(top, #b9b9b9 20%, #a9a9a9 100%)
		padding 0 7px
		margin-left 8px

	.iconic
		padding 0 5px
		&:hover
			color #d00

	footer
		padding 0
		z-index 10
		overflow hidden
		border-top 1px solid #cfcfcf
		background linear-gradient(top, #f6f6f6 0%, #f3f3f3 50%, #e6e6e6 50%, #f6f6f6 100%)

		.xicon
			margin 0
			width 34px
			padding 5px 0
			text-align center
			line-height 0
			box-shadow 1px 0 0 #ccc, -1px 0 0 #fff inset

			&:hover
				box-shadow 1px 0 0 #ccc, 0 1px 8px #ccc inset

			&.right
				float right
				box-shadow -1px 0 0 #ccc, 1px 0 0 #fff inset
				&:hover
					box-shadow -1px 0 0 #ccc, 0 1px 8px #ccc inset

			div
				width 16px
				height 16px
				display inline-block

.deck
	absolute(top 15px, left 35px, right 35px, bottom 25px)
	box-shadow 0 0 10px rgba(0,0,0,0.35)
	background #fff linear-gradient(top, #fff 0%, #e9e9e9 70%)
	border 1px solid #bbb

.dropper
	absolute(left 40px, right 40px, bottom 100px, top 100px)

.mask
	z-index 10
	absolute(top 0, left 0, right 0, bottom 0)
	text-align center
	background rgba(#fff, .6)
	display none

	& div
		text-indent -9000px
		direction ltr
		position relative
		display inline-block
		border 1px dotted green
		height 32px
		width 32px
		margin 0 5px
	.over
		border 1px dotted red

.input
	font-size 12px
	white-space pre
	overflow-y auto
	height 100%

footer
	z-index 11
	background linear-gradient(top, #f0f0f0 0%, #d6d6d6 90%)
	absolute(left 0, right 0, bottom 0)
	padding 8px 8px 6px

	> div
		outline 0
		text-decoration none
		font bold 11px tahoma
		display inline-block
		text-align center
		margin 0 8px

		.icon
			color #444
			width 32px
			height 32px
			margin 0 auto

		.uniq
			background-position 0 -230px

		.sort
			background-position 0 -905px

.search
	padding 15px 0
	text-align center
	border-bottom 1px solid #bbb
	background linear-gradient(top, #fdfdfd, #f0f0f0 50%, #e3e3e3 50%, #e9e9e9 50%, #eee)

	input
		margin 0
		width 88%
		padding 5px 8px
		border-radius(10px)
		border 1px solid #bbb
		box-shadow 1px 1px 3px #ccc inset, 1px 1px 0 #fff
		background #ffff
		&:focus
			outline none
			border 1px solid rgba(#0e8bce, 0.5)

@import 'icons'