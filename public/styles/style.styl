@import 'nib'
@import 'normalize'
@import 'webfonts'
@import 'utils'

nav-width = 320px

html
	overflow auto

body
	font normal 10pt sans-serif, Arial, Helvetica

.main
	background #eee url('../images/bg/3.png')
	absolute(top 0, left 0, bottom 0, right nav-width)

.path
	absolute(right 0, top 0, bottom 0)
	width nav-width
	z-index 1
	width nav-width
	background #eee
	background #eee url('../images/bg/4.png')
	box-shadow 0 0 10px rgba(#000, 0.3)

	div
		position relative

	.row
		color #333
		padding 10px
		position relative
		font normal 14px/19px 'Quattrocento Sans', sans-serif
		border-top 1px solid #fff
		border-bottom 1px solid #ddd
		background linear-gradient(top, #f9f9f9 20%, #f0f0f0 100%)
		box-shadow 0 2px 3px rgba(#333, 0.10),  0 -1px 3px #fff inset

		.icon
			float right
			opacity .5
			width 16px
			height 16px
			margin 2px 10px

		.grep
			background-position 0 0
		.union
			background-position 0 -184px
		.intersection
			background-position 0 -92px
		.difference
			background-position 0 -46px
		.symmetric
			background-position 0 -138px

	.options
		text-align center
		background url('../images/bg/3.png')
		height 0
		overflow hidden
		// transition height 0.2s ease-in
		box-shadow -1px -2px 3px rgba(#333, 0.1) inset

		.icon
			text-indent -9999px
			direction ltr
			display inline-block
			opacity 0.3
			transition opacity 0.15s ease-in
			margin 6px 10px 4px
			height 30px
			width 32px
			&:hover
				opacity 1

		.true
			opacity 1

	.counter
		float right
		border-radius 10px
		font bold 12px/19px arial
		color #fff
		box-shadow 0 1px 0px rgba(#000, 0.3) inset
		text-shadow #999 1px 1px 1px
		background linear-gradient(top, #b9b9b9 20%, #a9a9a9 100%)
		padding 0 7px

	.iconic
		padding 0 5px
		&:hover
			color #d00

.deck
	absolute(top 15px, left 35px, right 35px, bottom 25px)
	box-shadow 0px 0px 10px rgba(0,0,0,0.35)
	background #fff linear-gradient(top, #fff 0%, #e9e9e9 70%)
	border 1px solid #bbb

.dropper
	absolute(left 40px, right 40px, bottom 100px, top 100px)

.mask
	z-index 10
	absolute(top 0, left 0, right 0, bottom 0)
	text-align center
	background rgba(#fff, .6)

	& div
		text-indent -9000px
		direction ltr
		position relative
		display inline-block
		border 1px dotted green
		height 32px
		width 32px
		margin 0 5px
	.over
		border 1px dotted red

.input
	font-size 12px
	white-space pre
	overflow-y auto
	height 100%

footer.options
	z-index 11
	background linear-gradient(top, #f0f0f0 0%, #d6d6d6 90%)
	absolute(left 0, right 0, bottom 0)
	// box-shadow 0 1px 5px rgba(#000, 0.15)
	padding 8px 8px 6px

	> div
		outline 0
		text-decoration none
		font bold 11px tahoma
		display inline-block
		text-align center
		margin 0 8px

		.icon
			color #444
			width 32px
			height 32px
			margin 0 auto

		.uniq
			background-position 0 -230px

		.sort
			background-position 0 -905px

