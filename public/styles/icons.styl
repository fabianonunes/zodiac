.icon
	background url('../images/sprites.png') no-repeat
	cursor pointer

.intersection
	background-position 0 -598px
.union
	background-position 0 -1134px
.difference
	background-position 0 -288px
.symmetric
	background-position 0 -1072px
.grep
	background-position 0 -474px

@font-face
	font-family: 'IconPack'
	src: local('IconPack'), url('fonts/iconpack.woff') format('woff'), url('fonts/iconpack.otf') format('opentype'), url('fonts/iconpack.svg#IconPack') format('svg')

@font-face
	font-family 'IconicStroke'
	src url("fonts/iconic_stroke.eot")
	src local('IconicStroke'), url("fonts/iconic_stroke.svg") format('svg')

.iconpack
	font: normal 14px/10px 'IconPack'

.iconic
	font: normal 14px/10px 'IconicStroke'

.iconpack, .iconic, .tool
	color: #ddd
	cursor: pointer
	transition: color .3s ease-out

.iconpack
	&.time:before
		content: 's'
	&.star:before
		content: 'a'

