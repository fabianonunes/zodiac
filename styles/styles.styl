@import 'nib'
@import 'normalize'
@import 'webfonts'
@import 'utils'

nav-width = 320px

html
	overflow auto

body
	font normal 10pt sans-serif, Arial, Helvetica

.main
	background #eee url('../img/wood.jpg')
	absolute(top 0, right 0, bottom 0, left nav-width)

.deck
	width 450px
	overflow hidden
	margin 20px auto
	position relative
	box-shadow 0 0 20px rgba(0,0,0,0.7)
	background linear-gradient(top, #fff 0%, #e9e9e9 70%)

	h2
		margin 0
		color #fff
		padding 0 20px
		text-shadow #000 1px 1px 1px
		font normal 19px/38px 'Cantarell', sans-serif
		background-image linear-gradient(top, #0e8bce 20%, #025986 100%)
		box-shadow 0 1px 2px rgba(#fff, 0.35) inset, 0 2px 3px rgba(#000, 0.4)

	.card
		height 350px
		margin 0 0 40px

		div
			padding 0 45px
			text-align center
			font normal 22pt 'Open Sans Condensed'

		.question
			height 50%

		.answer
			height 30%
			font-size 16pt

		.tools
			height 20%
			cursor pointer
			font 12pt Arial, sans-serif

			div
				display inline-block // center the right floateds children

			a.iconic:hover ~ a.iconic, & a.iconic:hover
				color #aaa

			& a.iconic
				float right // reverse in the previous general sibling selector (~)
				font-size 24pt
				color rgba(#000, 0.12)

		& p
			margin 0
			width 100%
			height 100%
			box(center, center, vertical)

footer
	absolute(bottom 0, left 0, right 0)
	background linear-gradient(top, #f0f0f0 0%, #cfcfcf 100%)
	box-shadow 0 -1px 7px rgba(#000, 0.15)

	&.options
		height 38px
		padding 0 5px

		a
			outline 0
			float left
			text-decoration none
			font bold 30px/30px 'Open Sans Condensed'

			&.icon
				color #444
				padding 0 4px
				float right

.nav
	z-index 1
	width nav-width
	background #eee
	box-shadow 0 0 15px #000
	absolute(top 0, bottom 0)

	.search
		padding 13px 0
		text-align center
		border-bottom 1px solid #bbb
		background linear-gradient(top, #fdfdfd, #f0f0f0 50%, #e3e3e3 50%, #e9e9e9 50%, #eee)

		input
			margin 0
			width 88%
			padding 5px 8px
			border-radius(10px)
			border 1px solid #bbb
			box-shadow 1px 1px 3px #ccc inset, 1px 1px 0 #fff
			&:focus
				outline none
				border 1px solid rgba(#0e8bce, 0.5)
	
	ul
		list-style-type none
		padding 0
		margin 0

		li-gab = 50px

		li
			color #333
			padding 10px
			height li-gab
			position relative
			border-top 1px solid #fff
			font normal 14px 'Cantarell'
			text-shadow #fff 1px 1px 1px
			border-bottom 1px solid #ddd
			background linear-gradient(top, #f9f9f9 20%, #f0f0f0 100%)
			box-shadow 0 2px 7px rgba(#333, 0.1),  0 -1px 3px #fff inset

			.details
				text-shadow #fff 1px 1px 1px
				font-size 9pt
				color #aaa

			.progress
				absolute(right 15px, bottom 8px, left li-gab+15)
				border-top 1px solid #d6d6d6
				border-bottom 1px solid #fff
				background rgba(#ddd, 0.3)
				height 3px

				div
					background #d6d6d6
					height 100%
				&.p20 div
					width 20%
				&.p40 div
					width 40%
				&.p60 div
					width 60%

			.img
				width li-gab
				float left
				height 100%
				margin-right 10px

	footer
		padding 0
		height 31px
		overflow hidden
		border-top 1px solid #404040
		box-shadow 0 1px 0 rgba(#fff, 0.4) inset, 0 -2px 7px rgba(#333, 0.4)
		background linear-gradient(top, #404040 40%, #2f2f2f 100%)
		z-index 10

		a
			color #ccc
			height 100%
			font-size 24px
			line-height 40px
			display inline-block
			text-shadow 1px 1px 0 #000
			box-shadow -1px 0 0 rgba(#fff, 0.15) inset, -2px 0 0 rgba(#000, 0.2) inset

			&:hover
				color #fff

@import 'icons'